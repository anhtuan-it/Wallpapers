<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundFragment"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo_img_about"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtNameApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_name_about"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        tools:ignore="PrivateResource" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_info"
        android:textColor="@color/cardview_light_background"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:ignore="PrivateResource,SmallSp" />

</LinearLayout>